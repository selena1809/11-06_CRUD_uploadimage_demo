<%= simple_form_for(@user, multipart: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit 'Make a user' %>
    <%= link_to 'Nevermind', users_path, class: 'button' %>
  </div>
<% end %>
